{% extends "templates/app.twig" %}

{% block naslov %}

<h1 class="display-1 mb-5 text-success">
	&gt; slim3_builder_ - <span class="text-danger">[PODESAVANJE]</span>
</h1>
<p class="display-6">
	<em>baza:</em> <strong class="text-danger">{{ baza }}</strong>
	&nbsp;&nbsp;&nbsp;&nbsp;
	<em>tabela:</em> <strong class="text-danger">{{ tabela }}</strong>
</p>
<form action="{{ path_for('podesavanja') }}" method="POST">
	<h4>Podesavanje kolona za kontroler</h4>
	<table class="table table-hover">
		<thead>
			<tr class="table-primary">
				<th>RB</th>
				<th>Naziv</th>
				<th>Tip</th>
				<th>Duzina</th>
				<th>Null</th>
				<th>Default</th>
				<th>Kljuc</th>
				<th>REF tabela</th>
				<th>REF kolona</th>
				<th>Validacija</th>
				<th>Pretraga</th>
				<th>Dodavanje</th>
				<th>Izmena</th>
				<th>Log</th>
				<th>Sortiranje</th>
			</tr>
		</thead>
		<tbody>
			{% for k in kolone %}
			<tr>
				<td>{{ k.pozicija }}</td>
				<td><strong>{{ k.naziv }}</strong></td>
				<td>{{ k.tip }}</td>
				<td>{{ k.duzina }}</td>
				<td>{{ k.nulabilno }}</td>
				<td>{{ k.podrazumevano }}</td>
				<td>{{ k.kljuc }}</td>
				<td>{{ k.ref_tabela }}</td>
				<td>{{ k.ref_kolona }}</td>
				<td>
					<div class="form-check">
						<input name="validacija[]" class="form-check-input" type="checkbox"
						value="{{ k.id }}" {{ (k.validacija==1) ? " checked" : "" }}>
					</div>
				</td>
				<td>
					<div class="form-check">
						<input name="pretraga[]" class="form-check-input" type="checkbox"
						value="{{ k.id }}" {{ (k.pretraga==1) ? " checked" : "" }}>
					</div>
				</td>
				<td>
					<div class="form-check">
						<input name="dodavanje[]" class="form-check-input" type="checkbox"
						value="{{ k.id }}" {{ (k.dodavanje==1) ? " checked" : "" }}>
					</div>
				</td>
				<td>
					<div class="form-check">
						<input name="izmena[]" class="form-check-input" type="checkbox"
						value="{{ k.id }}" {{ (k.izmena==1) ? " checked" : "" }}>
					</div>
				</td>
				<td>
					<div class="form-check">
						<input name="log[]" class="form-check-input" type="checkbox"
						value="{{ k.id }}" {{ (k.log==1) ? " checked" : "" }}>
					</div>
				</td>
				<td>
					<div class="form-check">
						<input name="sortiranje[]" class="form-check-input" type="checkbox"
						value="{{ k.id }}" {{ (k.sortiranje==1) ? " checked" : "" }}>
					</div>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="float-end">
		<input type="submit" class="btn btn-outline-success" value="Snimi podesavanja">
	</div>
</form>

{% endblock naslov %}
